# EntroSpies Environment Configuration
# Copy this file to .env and update with your values

# External Elasticsearch Configuration (optional)
ELASTICSEARCH_URL=http://your-elasticsearch-host:9200
ELASTICSEARCH_USERNAME=your_username
ELASTICSEARCH_PASSWORD=your_password

# Container Configuration
CONTAINER_USER_ID=1000
CONTAINER_GROUP_ID=1000

# Bot Performance Configuration
BOT_MAX_CONCURRENT_DOWNLOADS=5
BOT_RATE_LIMIT=0.1
BOT_DEFAULT_MESSAGES=5

# Security Configuration
TZ=UTC

# Volume Paths (adjust if needed)
DOWNLOADS_PATH=./telegram_bots/download
LOGS_PATH=./telegram_bots/logs
SESSION_PATH=./telegram_bots/session

# Note: Telegram API credentials should be configured in telegram_bots/api_config.json
# Never put API credentials in environment variables for security